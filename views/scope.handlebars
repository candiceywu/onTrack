<div class="jumbotron" style="margin-top: 72px">
    <div class="container scopeBorder">
        <div class="row">
            <div class="col-md-10 align-text-bottom">
                {{!-- not sure if this is correct for grabbing scope name --}}
                <h2 class="m-0" id="h2">{{req.body.name.generalContractor}} | Scope Dashboard</h2>
            </div>
            <div class="d-flex col-md-2 align-items-end justify-content-end">
                <button class="btn1" id="newScope" style="margin-right: 5px">+ New Scope üè†</button>
            </div>
        </div>
        <div class="row scopeDivider1">
            <div class="d-flex col-md-1 scopeHeaders1">
                <p class="text-align-bottom m-0">TITLE</p>
            </div>
            <div class="d-flex col-md-3 scopeHeaders1">
                <p class="text-align-bottom m-0">DESCRIPTION</p>
            </div>
            <div class="d-flex col-md-4 scopeHeaders1">
                <p class="text-align-bottom m-0">PROGRESS</p>
            </div>
            <div class=" d-flex col-md-3 scopeHeaders1">
                <p class="text-align-bottom m-0">PICTURES</p>
            </div>
            <div class=" d-flex col-md-1 scopeHeaders1">
                <p class="text-align-bottom m-0">EDIT</p>
            </div>
        </div>

        <div class="row scopeDivider2">
            {{#each userInfo.scopes as |scope|}}
            <div class="d-flex col-md-1 scopeHeaders2">
                <p class="text-align-bottom m-0">{{scope.title}}</p>
            </div>
            <div class="d-flex col-md-3 scopeHeaders2">
                <p class="text-align-bottom m-0">{{scope.description}}</p>
            </div>
            <div class="d-flex col-md-4 scopeHeaders2">
                <p class="text-align-bottom m-0">{{scope.is_complete}}</p>
            </div>
            <div class=" d-flex col-md-1 scopeHeaders2">
                <p class="text-align-bottom m-0">Button</p>
            </div>
            {{/each}}
        </div>

        {{!-- Modal To Create a Scope --}}
        <div class="modal fade" id="myScopeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: gray">
                        <h5 class="modal-title" id="exampleModalLongTitle" style="color:white; font-weight: bold">Add
                            Scope</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" style="background-color: gray">
                        <form class="row" style="max-width: 800px">
                            <div class="form-group upDownMargin">
                                <label for="exampleInputEmail1" style="font-size: 20px; font-weight: bold">Title</label>
                                <br>
                                <input type="text" class="form-control" id="name" aria-describedby="emailHelp"
                                    placeholder="Enter the scope title" style="border: solid 2px black">
                            </div>
                            <div class="form-group upDownMargin">
                                <label for="exampleInputPassword1"
                                    style="font-size: 20px; font-weight: bold">Description</label>
                                <input type="text" class="form-control" id="address" placeholder="Enter the description"
                                    style="border: solid 2px black">
                            </div>
                            {{!-- check if this is correct for dropdown option --}}
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="is_complete"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Progress
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Not started</a>
                                    <a class="dropdown-item" href="#">Delayed</a>
                                    <a class="dropdown-item" href="#">25%</a>
                                    <a class="dropdown-item" href="#">50%</a>
                                    <a class="dropdown-item" href="#">75%</a>
                                    <a class="dropdown-item" href="#">Complete</a>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end loginButton">
                                <button type="submit" class="upDownMargin btn btn-primary"
                                    id="addScopeBtn">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


