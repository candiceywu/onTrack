<div class="jumbotron" style="margin-top: 72px">
    <div class="container scopeBorder">
        <div class="row">
            <div class="d-flex col-md-10 align-text-bottom">
                {{!-- not sure if this is correct for grabbing scope name --}}
                <h2 class="m-0" id="h2">{{user.name}} | Scope Dashboard</h2>
                <p style="visibility: hidden; margin: 0px" id="projectStoredId">{{user.id}}</p>
            </div>
            <div class="d-flex col-md-2 align-items-end justify-content-end">
                <button class="btn1" id="newScope" style="margin-right: 5px">+ New Scope üè†</button>
                <a href="/projects" class="btn1" style="margin-right: 5px">Back</a>
            </div>
        </div>
        <div class="row scopeDivider1">
            <div class="d-flex col-md-1 scopeHeaders1">
                <p class="text-align-bottom m-0">TITLE</p>
            </div>
            <div class="d-flex col-md-6 scopeHeaders1">
                <p class="text-align-bottom m-0">DESCRIPTION</p>
            </div>
            <div class="d-flex col-md-2 scopeHeaders1">
                <p class="text-align-bottom m-0">PROGRESS</p>
            </div>
            <div class=" d-flex col-md-2 scopeHeaders1">
                <p class="text-align-bottom m-0">PICTURES</p>
            </div>
            <div class=" d-flex col-md-1 scopeHeaders1">
                <p class="text-align-bottom m-0">EDIT</p>
            </div>
        </div>

        <div class="row scopeDivider2" id="scopeItems">
            {{#each user.scopes as |scope|}}
            <div class="d-flex col-md-1 scopeHeaders2">
                <p class="text-align-bottom m-0">{{scope.title}}</p>
            </div>
            <div class="d-flex col-md-6 scopeHeaders2">
                <p class="text-align-bottom m-0">{{scope.description}}</p>
            </div>
            <div class="d-flex col-md-2 scopeHeaders2">
                <p class="text-align-bottom m-0">{{scope.is_complete}}</p>
            </div>
            <div class="d-flex col-md-2 scopeHeaders2">
                <a href="{{scope.picture}}">
                    Progress Photo
                    {{!-- <img alt="Const Photo" src="{{scope.picture}}" style="width: 100px; height: 100px"> --}}
                </a>
            </div>
            <div class=" d-flex col-md-1 scopeHeaders2">
                <a href="/project/scope/{{scope.id}}">EDIT</a>
            </div>
            {{/each}}
        </div>

        {{!-- Modal To Create a Scope --}}
        <div class="modal fade" id="myScopeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: gray">
                        <h5 class="modal-title" id="exampleModalLongTitle" style="color:white; font-weight: bold">Add
                            Scope</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" style="background-color: gray">
                        <form class="row" style="max-width: 800px">
                            <div class="form-group upDownMargin">
                                <label for="exampleInputEmail1" style="font-size: 20px; font-weight: bold">Title</label>
                                <br>
                                <input type="text" class="form-control" id="title" aria-describedby="emailHelp"
                                    placeholder="Enter the scope title" style="border: solid 2px black">
                            </div>
                            <div class="form-group upDownMargin">
                                <label for="exampleInputPassword1"
                                    style="font-size: 20px; font-weight: bold">Description</label>
                                <input type="text" class="form-control" id="description"
                                    placeholder="Enter the description" style="border: solid 2px black">
                            </div>

                            {{!-- check if this is correct for dropdown option --}}
                            <div class="dropdown">
                                <label for="progress" style="font-size: 20px; font-weight: bold">Progress</label>
                                <select id="is_complete" name="dropdown_progress" style="border: solid 2px black">
                                    <option value="Not started">Not started</option>
                                    <option value="Delayed">Delayed</option>
                                    <option value="25%">25%</option>
                                    <option value="50%">50%</option>
                                    <option value="75%">75%</option>
                                    <option value="Complete">Complete</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-end loginButton">
                                <button id="upload_widget" class="cloudinary-button">Upload files</button>
                                <button type="submit" class="upDownMargin btn btn-primary"id="addScopeBtn">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>


