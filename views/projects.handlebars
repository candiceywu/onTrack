<div class="jumbotron" style="margin-top: 72px">
    <div class="container projectBorder">
        <div class="row">
            <div class="d-flex col-md-10 align-text-bottom">
                {{#if isContractor}}
                <h2 class="m-0" id="h2">{{user.generalContractor}} | Projects Dashboard</h2>
                <p id="idStore" style="visibility: hidden">{{user.id}}</p>
                {{else}}
                <h2 class="m-0" id="h2">{{user.firstName}} | Projects Dashboard</h2>
                <p id="idStore" style="visibility: hidden">{{user.id}}</p>
                {{/if}}
            </div>
            <div class="d-flex col-md-2 align-items-end justify-content-end">
                {{#if isContractor}}
                <button class="btn1" id="newProject" style="margin-right: 5px">+ New Project üè†</button>
                {{/if}}
            </div>
        </div>
        <div class="row projectDivider1">
            <div class="d-flex col-md-1 projectHeaders1">
                <p class="text-align-bottom m-0">ID #</p>
            </div>
            <div class="d-flex col-md-3 projectHeaders1">
                <p class="text-align-bottom m-0">NAME</p>
            </div>
            <div class="d-flex col-md-4 projectHeaders1">
                <p class="text-align-bottom m-0">ADDRESS</p>
            </div>
            <div class=" d-flex col-md-3 projectHeaders1">
                <p class="text-align-bottom m-0">COST</p>
            </div>
            <div class=" d-flex col-md-1 projectHeaders1">
                <p class="text-align-bottom m-0">VIEW</p>
            </div>
        </div>
        
        <div class="row projectDivider2" id="projectLayouts">
            {{#each user.projects as |project|}}
            <div class="d-flex col-md-1 projectHeaders2">
                <p class="text-align-bottom m-0">{{project.id}}</p>
            </div>
            <div class="d-flex col-md-3 projectHeaders2">
                <p class="text-align-bottom m-0">{{project.name}}</p>
            </div>
            <div class="d-flex col-md-4 projectHeaders2">
                <p class="text-align-bottom m-0">{{project.address}}</p>
            </div>
            <div class=" d-flex col-md-3 projectHeaders2">
                <p class="text-align-bottom m-0">{{project.cost}}</p>
            </div>
            <div class=" d-flex col-md-1 projectHeaders2">
                <a href="/projects/{{project.id}}">VIEW</a>
            </div>
            {{/each}}
        </div>

        {{!-- Modal To Create a Project --}}
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
            <div class="modal-header" style="background-color: gray">
                <h5 class="modal-title" id="exampleModalLongTitle" style="color:white; font-weight: bold">Add Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="background-color: gray">
                <form class="row" style="max-width: 800px">
                    <div class="form-group upDownMargin">
                        <label for="exampleInputEmail1" style="font-size: 20px; font-weight: bold">Name</label>
                        <br>
                        <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter a project name" style="border: solid 2px black">  
                    </div>
                    <div class="form-group upDownMargin">
                        <label for="exampleInputPassword1" style="font-size: 20px; font-weight: bold">Project Address</label>
                        <input type="text" class="form-control" id="address" placeholder="Enter an address..." style="border: solid 2px black">
                    </div>
                    <div class="form-group upDownMargin">
                        <label for="exampleInputPassword1" style="font-size: 20px; font-weight: bold">Cost</label>
                        <input type="text" class="form-control" id="cost" placeholder="Enter the cost" style="border: solid 2px black">
                    </div>
                    <div class="form-group upDownMargin">
                        <label for="exampleInputPassword1" style="font-size: 20px; font-weight: bold">Description</label>
                        <input type="text" class="form-control" id="description" placeholder="Enter a description" style="border: solid 2px black">
                    </div>
                    <div class="form-group upDownMargin">
                        <label for="exampleInputPassword1" style="font-size: 20px; font-weight: bold">Owner</label>
                        <input type="text" class="form-control" id="owner" placeholder="Enter owner ID" style="border: solid 2px black">
                    </div>
                    <div class="d-flex justify-content-end loginButton">
                        <button type="submit" class="upDownMargin btn btn-primary" id="addProjectBtn">Submit</button>
                    </div>
                </form>
            </div>
            </div>
        </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
